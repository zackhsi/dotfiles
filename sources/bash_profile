#!/bin/bash
set -e

prompt() {
  local __host="\[\033[01;32m\]\h"
  local __cur_location="\[\033[01;34m\]\W"
  local __git_branch_color="\[\033[31m\]"
  local __git_branch='$(git branch 2> /dev/null | grep -e ^* | sed -E  s/^\\\\\*\ \(.+\)$/\\[\\\\\1\\]\ /)'
  local __prompt_tail="\[\033[35m\]❯"
  local __last_color="\[\033[00m\]"
  export PS1="$__host $__cur_location $__git_branch_color$__git_branch$__prompt_tail$__last_color "
}
prompt

# Source service_venv if it exists
if command -v service_venv > /dev/null; then
  . service_venv
fi

alias ls="ls --color=tty"
alias ll="ls -lh"
alias -- -='cd -'
