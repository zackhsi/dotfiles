#!/bin/bash
set -e

prompt() {
  local RESET="\[\033[00m\]"
  local RED="\[\033[31m\]"
  local GREEN="\[\033[32m\]"
  local YELLOW="\[\033[33m\]"
  local BLUE="\[\033[34m\]"
  local MAGENTA="\[\033[35m\]"
  local __host="$YELLOW\h"
  local __cur_location="$MAGENTA\W"
  local __git_branch='$(git branch 2> /dev/null | grep -e ^* | sed -E  s/^\\\\\*\ \(.+\)$/\\[\\\\\1\\]\ /)'
  local __prompt_tail="$BLUEâ¯"
  export PS1="$__host $__cur_location $GREEN$__git_branch$__prompt_tail$RESET "
}
prompt

# Source service_venv if it exists
if command -v service_venv > /dev/null; then
  . service_venv
fi

alias ls="ls --color=tty"
alias ll="ls -lh"
alias -- -='cd -'
