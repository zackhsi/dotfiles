{
  // BracketPairColorizer.
  "bracketPairColorizer.consecutivePairColors": [
    "()",
    "[]",
    "{}",
    ["#f66a0a", "#ea4aaa", "#dbab09"],
    "Red"
  ],

  // Debug.
  "debug.console.fontFamily": "Operator Mono",
  "debug.console.fontSize": 14,

  // Editor.
  "editor.fontFamily": "Operator Mono",
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.rename.enablePreview": false,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "none",
  "editor.scrollBeyondLastLine": false,
  "editor.suggest.localityBonus": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.control.module",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "constant.language.boolean.ruby",
        "settings": {
          "fontStyle": "italic bold"
        }
      },
      {
        "scope": "constant.language.nil.ruby",
        "settings": {
          "fontStyle": "bold"
        }
      },
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "keyword.control.class.ruby",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "keyword.control.module.ruby",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ],
    "[GitHub Light]": {
      "textMateRules": [
        {
          "scope": "string.quoted.double.interpolated.ruby",
          "settings": {
            "foreground": "#22863a"
          }
        },
        {
          "scope": "constant.language.symbol.ruby",
          "settings": {
            "foreground": "#22863a",
            "fontStyle": "bold"
          }
        },
        {
          "scope": "constant.language.symbol.hashkey.ruby",
          "settings": {
            "foreground": "#22863a",
            "fontStyle": "bold"
          }
        }
      ]
    },
    "[Ayu Light]": {
      "textMateRules": [
        {
          "scope": "constant.language.symbol.ruby",
          "settings": {
            "foreground": "#86B300",
            "fontStyle": "bold"
          }
        },
        {
          "scope": "variable.other.constant.ruby",
          "settings": {
            "foreground": "#FA8D3E",
            "fontStyle": ""
          }
        },
        {
          "scope": "constant.language.symbol.hashkey.ruby",
          "settings": {
            "foreground": "#86B300",
            "fontStyle": "bold"
          }
        },
        {
          "scope": "constant.language.boolean.ruby",
          "settings": {
            "foreground": "#55B4D4",
            "fontStyle": "bold"
          }
        },
        {
          "scope": "entity.name.function.ruby",
          "settings": {
            "foreground": "#399EE6"
          }
        }
      ]
    }
  },

  // Editor formatters.
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // Explorer.
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "explorer.sortOrder": "mixed",

  // Files.
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // Markdown.
  "markdown.extension.preview.autoShowPreviewToSide": true,

  // Search.
  "search.showLineNumbers": true,
  "search.smartCase": true,

  // Sorbet.
  "sorbet.enabled": true,
  "sorbet.revealOutputOnError": true,

  // Terminal.
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontSize": 14,

  // Update.
  "update.mode": "none",

  // Vim.
  "vim.hlsearch": true,
  "vim.leader": " ",
  "vim.visualstar": true,

  // Window.
  "window.zoomLevel": 0,

  // Workbench.
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "GitHub Light",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.iconTheme": "ayu",
  "workbench.list.multiSelectModifier": "alt",
  "workbench.list.openMode": "doubleClick",
  "workbench.statusBar.visible": true,
  "workbench.tree.indent": 16,

  // Screencast.
  "screencastMode.onlyKeyboardShortcuts": true,

  // Zen Mode.
  "zenMode.fullScreen": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": false,
  "zenMode.silentNotifications": false
}
