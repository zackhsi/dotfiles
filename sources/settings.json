{
  // Debug.
  "debug.inlineValues": true,
  "debug.toolBarLocation": "docked",

  // Editor.
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.autoIndent": "full",
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorSurroundingLines": 5,
  "editor.fontFamily": "Iosevka",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.rename.enablePreview": false,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "none",
  "editor.scrollBeyondLastLine": false,
  "editor.suggest.localityBonus": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.control.module",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "punctuation.definition.tag",
        "settings": {
          "fontStyle": "bold"
        }
      },
      {
        "scope": "constant.language.boolean.ruby",
        "settings": {
          "fontStyle": "italic bold"
        }
      },
      {
        "scope": "constant.language.nil.ruby",
        "settings": {
          "fontStyle": "bold"
        }
      },
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "keyword.control.class.ruby",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "keyword.control.module.ruby",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.wordBasedSuggestions": true,
  "editor.wordBasedSuggestionsMode": "allDocuments",

  // Explorer.
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.incrementalNaming": "smart",
  "explorer.openEditors.visible": 0,
  "explorer.sortOrder": "mixed",

  // Everforest.
  "everforest.italicKeywords": true,
  "everforest.lightContrast": "hard",
  "everforest.lightCursor": "blue",
  "everforest.lightSelection": "blue",

  // Files.
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // Flow.
  "flow.pathToFlow": "~/stripe/pay-server/manage/frontend/node_modules/.bin/flow",

  // Git.
  "git.path": "/usr/local/bin/git",

  // Gitlens.
  "gitlens.blame.highlight.enabled": false,
  "gitlens.blame.separateLines": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.remotes": [
    {
      "domain": "git.corp.stripe.com",
      "type": "Custom",
      "name": "Stripe",
      "protocol": "https",
      "urls": {
        "repository": "https://git.corp.stripe.com/${repo}",
        "branches": "https://git.corp.stripe.com/${repo}/branches",
        "branch": "https://git.corp.stripe.com/${repo}/commits/${branch}",
        "commit": "https://git.corp.stripe.com/${repo}/commit/${id}",
        "file": "https://git.corp.stripe.com/${repo}?path=${file}${line}",
        "fileInBranch": "https://git.corp.stripe.com/${repo}/blob/${branch}/${file}${line}",
        "fileInCommit": "https://git.corp.stripe.com/${repo}/blob/${id}/${file}${line}",
        "fileLine": "#L${line}",
        "fileRange": "#L${start}-L${end}"
      }
    }
  ],

  // Html.
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Javascript.
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "javascript.updateImportsOnFileMove.enabled": "always",

  // JSON.
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // Markdoc.
  "markdoc.enabled": true,

  // Pay.
  "run-pay.test.setFirstLineBreakpoint": false,

  // Python.
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.linting.flake8Enabled": true,
  "python.showStartPage": false,
  "python.sortImports.path": "${workspaceFolder}/.venv/bin/isort",

  // Redhat.
  "redhat.telemetry.enabled": false,

  // Ruby.
  "ruby.format": false,
  "[ruby]": {
    "editor.defaultFormatter": "misogi.ruby-rubocop",
    "editor.tabSize": 2
  },

  // Search.
  "search.collapseResults": "auto",
  "search.experimental.searchInOpenEditors": true,
  "search.followSymlinks": false,
  "search.maintainFileSearchCache": true,
  "search.mode": "newEditor",
  "search.quickOpen.includeHistory": false,
  "search.searchEditor.defaultNumberOfContextLines": 2,
  "search.searchEditor.reusePriorSearchConfiguration": true,
  "search.showLineNumbers": true,
  "search.smartCase": true,

  // Sorbet.
  "sorbet.enabled": true,

  // Spelling.
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.enableFiletypes": ["ruby"],
  "cSpell.enabled": true,
  "cSpell.language": "en,en-US,en-GB",
  "cSpell.userWords": [
    "ebat",
    "idct",
    "jsonify",
    "noqa",
    "strftime",
    "strptime",
    "vban",
    "vbans",
    "warung"
  ],

  // Terminal.
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 1000000,

  // TypeScript.
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,

  // Update.
  "update.mode": "manual",

  // Vim.
  "vim.hlsearch": true,
  "vim.leader": " ",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["]", "c"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["[", "c"],
      "commands": ["workbench.action.editor.previousChange"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    }
  ],
  "vim.visualstar": true,
  "vim.textwidth": 99,

  // Window.
  "window.zoomLevel": 0,

  // Workbench.
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Everforest Light",
  "workbench.colorCustomizations": {
    "[GitHub Light Default]": {
      "editorBracketHighlight.foreground1": "#ea4aaa",
      "editorBracketHighlight.foreground2": "#28a745",
      "editorBracketHighlight.foreground3": "#6f42c1",
      "editorBracketHighlight.foreground4": "#ea4aaa",
      "editorBracketHighlight.foreground5": "#28a745",
      "editorBracketHighlight.foreground6": "#6f42c1",
    },
    "[Nord]": {
      "editorBracketHighlight.foreground1": "#EBCB8B",
      "editorBracketHighlight.foreground2": "#D08770",
      "editorBracketHighlight.foreground3": "#B48EAD",
      "editorBracketHighlight.foreground4": "#EBCB8B",
      "editorBracketHighlight.foreground5": "#D08770",
      "editorBracketHighlight.foreground6": "#B48EAD",
    },
  },
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "medium",
  "workbench.editor.limit.value": 30,
  "workbench.editor.sharedViewState": true,
  "workbench.editor.showTabs": false,
  "workbench.editor.untitled.experimentalLanguageDetection": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "workbench.list.multiSelectModifier": "alt",
  "workbench.list.openMode": "doubleClick",
  "workbench.statusBar.visible": true,
  "workbench.tree.indent": 16,

  // Screencast.
  "screencastMode.onlyKeyboardShortcuts": true,

  // Zen Mode.
  "zenMode.fullScreen": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": false,
  "zenMode.silentNotifications": false
}
