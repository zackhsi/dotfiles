{
       // Appearance.
       "debug.console.fontFamily": "Operator Mono",
       "debug.console.fontSize": 14,
       "editor.fontFamily": "Operator Mono",
       "editor.fontSize": 14,
       "terminal.integrated.fontSize": 14,
       "workbench.colorTheme": "Ayu Light",
       "workbench.iconTheme": "ayu",
       "bracket-pair-colorizer-2.colors": [
              "#a37acc",
              "#399ee6",
              "#f07171",
              "#86b300",
       ],

       // Editor.
       "editor.formatOnPaste": true,
       "editor.formatOnSave": true,
       "editor.minimap.enabled": false,
       "editor.scrollBeyondLastLine": false,
       "editor.tokenColorCustomizations": {
              "[Ayu Light]": {
                     "textMateRules": [
                            {
                                   "scope": "constant.language.symbol.ruby",
                                   "settings": {
                                          "foreground": "#86B300",
                                          "fontStyle": "bold"
                                   }
                            },
                            {
                                   "scope": "variable.other.constant.ruby",
                                   "settings": {
                                          "foreground": "#FA8D3E",
                                          "fontStyle": ""
                                   }
                            },
                            {
                                   "scope": "keyword.control.class.ruby",
                                   "settings": {
                                          "fontStyle": "italic"
                                   }
                            },
                            {
                                   "scope": "keyword.control.module.ruby",
                                   "settings": {
                                          "fontStyle": "italic"
                                   }
                            },
                            {
                                   "scope": "constant.language.symbol.hashkey.ruby",
                                   "settings": {
                                          "foreground": "#86B300",
                                          "fontStyle": "bold"
                                   }
                            },
                            {
                                   "scope": "constant.language.boolean.ruby",
                                   "settings": {
                                          "foreground": "#55B4D4",
                                          "fontStyle": "bold"
                                   }
                            },
                            {
                                   "scope": "entity.name.function.ruby",
                                   "settings": {
                                          "foreground": "#399EE6",
                                   }
                            },
                     ]
              }
       },

       // Files.
       "files.autoSave": "afterDelay",

       // Sorbet.
       "sorbet.enabled": true,
       "sorbet.revealOutputOnError": true,

       // Vim.
       "vim.hlsearch": true,
       "vim.leader": " ",
       "vim.searchHighlightColor": "#f8e71c",
       "vim.visualstar": true,

       // Update.
       "update.mode": "none",

       // Workbench.
       "workbench.activityBar.visible": false,
       "workbench.statusBar.visible": true,
}
