[diff]
tool = icdiff
algorithm = patience
compactionHeuristic = true

[color "diff"]
meta = yellow bold
frag = magenta bold

[credential]
helper = osxkeychain

[difftool]
prompt = false

[difftool "icdiff"]
cmd = icdiff --line-numbers $LOCAL $REMOTE

[alias]
showtool = "!f() { git difftool ${1:-HEAD}^ ${1:-HEAD}; }; f"
