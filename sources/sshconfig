# vi: ft=sshconfig

Host gateway.ln gateway.lyft.net
    Hostname gateway.lyft.net
    ProxyCommand none
    GatewayPorts yes

Host gateway-sfo.ln gateway-sfo.lyft.net
    ProxyCommand none
    Hostname gateway-sfo.lyft.net
    GatewayPorts yes

Host *sfo*.lyft.net *sfo*.ln
    ProxyCommand ssh gateway-sfo.ln "proxy-ec2 %h"
    User zhsi
    ForwardAgent yes

Host *.lyft.net *.ln
    ProxyCommand ssh gateway.ln "proxy-ec2 %h"
    User zhsi
    ForwardAgent yes
    StrictHostKeyChecking no

Host *
    KeepAlive yes
    ServerAliveInterval 60
    GSSAPIAuthentication no
    ForwardAgent no
    ForwardX11 no

# BLESS Client 2.0.1
Match exec "env | grep -q BLESS_COMPLETE || /Users/zhsi/src/blessclient/bless --gui --host '%h'"
	IdentityFile ~/.ssh/blessid
	UserKnownHostsFile ~/.ssh/known_hosts ~/.ssh/known_hosts2 /Users/zhsi/src/blessclient/lyft_known_hosts
# ---End BLESS Client---
