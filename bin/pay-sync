#!/bin/bash
set -e
if [[ $# -ne 1 ]]; then
  echo "ERROR: 1 argument expected"
  exit 1
fi
repo=$1
if ! [ -d "$HOME/stripe/$repo/.git" ]; then
  echo "ERROR: no git repo found at ~/stripe/$repo"
  exit 1
fi
exec pay --host $(ls-servers -Spt runway --sample-user -N) sync "$HOME/stripe/$repo:/home/$USER/$repo"
